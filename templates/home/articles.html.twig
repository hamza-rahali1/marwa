{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
<!-- Start Icon Box Area -->
 <hr>
    <div class="icon-box-area" id="feature">
        <div class="container">
            <div class="col-12 text-center align-items-center container">
                <div class="jumbotron">
                
                {{ form_start(form) }}
                <div class="section-title">
                    <h4 style="color: #4272d7"> Rechercher dans nos Actualités</h4>
                </div>
                <br>
                <div class="row">
                    <label><b>Titre :</b></label>
                    <div class="col">{{ form_row(form.titre)}}</div>
                    <label><b>Catégorie :</b></label>
                    <div class="col">{{ form_row(form.categorie)}}</div>
                    <button class="btn">  Rechercher &nbsp;<i class="fa fa-search" aria-hidden="true"></i></button>
                </div>
                <br>
                {{ form_end(form) }}
            {% for article in articles %}
            
                <div class="col-lg-4 mt-5">
                    <div class="single-icon-box icon-box-img-1">
                        <div class="icon-box-content">
                            <h6 class="iconbox-content-heading"><i class="far fa-chart-bar"></i> {{ article.titre }}</h6>
                            <div class="iconbox-content-body">
                                <p style=" white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" >{{ article.contenu }}</p>
                                <a class="btn btn-inline read-more-btn" href="{{ path('article_show', {'id': article.id}) }}"><i class="fas fa-plus-square"></i> Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            
            {% endfor %}
            </div>
            </div>
        </div>
    </div>
</div>
    <!-- End Icon Box Area -->
    
{% endblock %}
